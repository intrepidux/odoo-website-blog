<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_blog_app_snippets" inherit_id="website.snippets" name="App Blog Snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="website_blog_app.vertel_app_footer" t-thumbnail="/website_blog_app/static/img/Vertel_Vit.svg"/>
        </xpath>
    </template>

    <template id="vertel_app_footer" name="Vertel App Footer">
        <section class="v_app_footer parallax s_parallax_is_fixed">
            <div class="container">
                <div class="col-lg-12 row d-flex flex-wrap mb-4">
                    <div class="col-lg-5 px-4">
                        <strong class="h1">MODULE-NAME</strong>
                        <p class="v-footer-desc">This module was created by Vertel AB for x-customer. 
                        For support, query and question contact us.</p>
                    </div>
                    <div class="col-lg-4"></div>
                    <div class="col-lg-3 odoo-order-lg-2 mb-4">
                        <img class="v-icon" src="/website_blog_app/static/img/Vertel_Vit.svg" alt="Icon"/>
                    </div>
                    <div class="col-lg-12 row mb-4">
                        <div class="col-lg-4">
                            <a t-attf-href="https://github.com/vertelab/your-module-here/issues" class="v-button d-flex">
                                <i class="fa fa-lg fa-github mr-2"></i>
                                Support
                            </a>
                        </div>
                        <div class="col-lg-4">
                            <a t-attf-href="https://vertel.se/apps" class="v-button d-flex">More apps</a>
                        </div>
                        <div class="col-lg-4">
                            <a t-attf-href="https://vertel.se/contactus" class="v-button d-flex">Contact us</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
