<odoo>
    <template id="is_app_blog_post_complete" name="Blog Post" track="1">
        <t t-call="website_blog.index">
            <section id="o_wblog_post_top" style="margin-top:45px;margin-bottom:45px;">
                <div class="container">
                    <div class="row col-md-12" style="height:400px">
                        <div class="col-md-7 col-xl-6 mb32" style="width:100%;height:100%">
                            <img class="rounded" t-att-src="'data:image/png;base64,%s' % to_text(blog_post.app_banner)" style="width:100%;height:90%"/>
                        </div>
                        <div class="col-md-5 col-xl-6 mb32">
                            <div style="display:flex;flex-direction:row;align-items: center;">
                                <div>
                                    <img class="rounded" t-att-src="'data:image/png;base64,%s' % to_text(blog_post.app_icon)" style="width:84px;height:84px"/>
                                </div>
                                <div style="margin-left: 10px;">
                                    <h3><t t-esc="blog_post.name"/></h3>
                                    by <strong>Vertel AB</strong>
                                </div>
                            </div>
                            <div style="margin-top:10px">
                                <span class="badge badge-primary">
                                    <b><t t-esc="blog_post.app_tree"/> </b>
                                </span>
                            </div>

                            <div class="p-0 col-12 d-md-none d-lg-block">
                                <table style="word-wrap: break-word;" class="loempia_app_table table table-sm small mt16">
                                    <thead class="alert-info">
                                        <tr>
                                            <td><b>Category</b></td>
                                            <td><span><t t-esc="blog_post.app_category.name"/> </span></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><b>Technical Name</b></td>
                                            <td><code><t t-esc="blog_post.app_module"/></code></td>
                                        </tr>
                                        <tr>
                                            <td><b>License</b></td>
                                            <td>OPL-1</td>
                                        </tr>
                                        <tr>
                                            <td><b>Website</b></td>
                                            <td><a rel="nofollow" href="https://vertelab.com/">https://vertelab.com/</a></td>
                                        </tr>
                                    </tbody>
                              </table>
                            </div>

                            <div>
                                <small class="text-muted mb16">
                                    <t t-esc="blog_post.app_description"/>
                                </small>
                            </div>

                            <small class="text-muted mb16">If you are using this module and you need <b>support</b>?<a rel="nofollow" href="#"> Click here!</a></small>
                        </div>
                    </div>

                </div>
            </section>
            <div itemprop="description" t-field="blog_post.app_index" class="oe_structure oe_empty mt16" id="product_full_description"/>

        </t>
    </template>
</odoo>
