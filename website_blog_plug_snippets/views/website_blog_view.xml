<odoo>
    <data>
        <record id="blog_post_plug_form_view_extended" model="ir.ui.view">
            <field name="name">blog.post.form.plug.view</field>
            <field name="model">blog.post</field>
            <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='publishing_details']" position="inside">
                    <field name="is_plug"/>
                    <field name="plug_sequence"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
